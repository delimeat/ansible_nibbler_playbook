[Unit]
Description=Nextcloud App Docker
RequiresMountsFor={{ nextcloud_dir }}
Requires=docker.service nextcloud-db-docker.service
After=docker.service nextcloud-db-docker.service

[Service]
Restart=always
RestartSec=3
ExecStartPre=-/usr/bin/docker kill {{ nextcloud_container_name }}
ExecStart=/usr/bin/docker start -a {{ nextcloud_container_name }}
ExecStop=/usr/bin/docker stop {{ nextcloud_container_name }}
ExecReload=/usr/bin/docker restart {{ nextcloud_container_name }}

[Install]
WantedBy=multi-user.target