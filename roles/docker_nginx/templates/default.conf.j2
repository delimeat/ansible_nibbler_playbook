server {
	listen 80 default_server;
	return 444;
}

server {
	listen 443 ssl default_server;

	include /etc/nginx/ssl/ssl.conf;
	ssl_certificate /etc/nginx/letsencrypt/live/{{ nginx_domain }}/fullchain.pem;
        ssl_certificate_key /etc/nginx/letsencrypt/live/{{ nginx_domain }}/privkey.pem;
	return 444;
}

server {
	listen 80;
	listen 443 ssl;
	server_name www.{{ nginx_domain }};

	include /etc/nginx/ssl/ssl.conf;
	ssl_certificate /etc/nginx/letsencrypt/live/{{ nginx_domain }}/fullchain.pem;
        ssl_certificate_key /etc/nginx/letsencrypt/live/{{ nginx_domain }}/privkey.pem;

	return 301 https://{{ nginx_domain }}$request_uri;
}

server {
	listen 80;
	server_name .{{ nginx_domain }};
	return 301 https://$host$request_uri;
}

{% for proxy in nginx_proxy %}
server {
	listen 443 ssl;

	server_name {{ proxy.subdomain }}.{{ nginx_domain }};
	
	include /etc/nginx/ssl/ssl.conf;
	include /etc/nginx/access/auth.conf;

	ssl_certificate /etc/nginx/letsencrypt/live/{{ nginx_domain }}/fullchain.pem;
        ssl_certificate_key /etc/nginx/letsencrypt/live/{{ nginx_domain }}/privkey.pem;

	gzip on;
	gzip_disable "msie6";
	gzip_vary on;
	gzip_proxied any;
	gzip_comp_level 6;
	gzip_buffers 16 8k;
	gzip_http_version 1.1;
	gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

	proxy_http_version 1.1;
	proxy_set_header Host $host;
	proxy_set_header X-Real-IP $remote_addr;
	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	proxy_set_header X-Forwarded-Proto $scheme;
	proxy_set_header Upgrade $http_upgrade;
	proxy_set_header Connection $http_connection;
	{% for extra in proxy.extras %}
	{{ extra }};
	{% endfor %}

	{% for location in proxy.locations %}
	location {{ location.path }} {
		proxy_pass http://{{ proxy.host }}:{{ proxy.port }}{{ location.endpoint }};
	}
	{% endfor %}

}
{% endfor %}
